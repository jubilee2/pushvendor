<div class="make_payment">
	<h4 class="text-primary"><span class="glyphicon"><%= config.currency %></span> Add a payment</h4>
	<hr />
	<%= form_for Payment.new, :url => make_payment_sale_path(@sale), :remote => true do |f| %>
		<label>Type</label>
		<%= f.select :payment_type, [['Credit Card', 'credit_card'], ['Cash', 'cash'], ['Check', 'check'], ['Other', 'other']], {}, { :class => "form-control" } %>
		<label>Amount</label>
		<%= f.text_field :amount, :class => "form-control", :placeholder => "Amount", :value => number_to_currency(@sale.remaining_balance, unit: config.currency) %>
		<br />
		<%= submit_tag "Submit Payment", :class => "btn btn-primary btn-lg" %>
	<% end %>
</div>