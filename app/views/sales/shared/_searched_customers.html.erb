<h4 class="text-primary"><span class="glyphicon glyphicon-tags"></span> Customers</h4>
<hr />
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Phone Number</th>
        <th>Email Address</th>
        <th>Add to Order</th>
      </tr>
    </thead>

    <tbody>
      <% unless @available_customers.blank? %>
        <% for customer in @available_customers %>
          <tr>
            <td><%= customer.last_name %></td>
            <td><%= customer.first_name %></td>
            <td><%= customer.phone_number %></td>
            <td><%= customer.email_address %></td>
            <td class="add_to_current_sale"><%= link_to create_customer_association_sale_path(@sale), method: :post, :remote => true, data: {params: "customer_id=#{customer.id}"} do %><p><span class="glyphicon glyphicon-plus"></span></p><% end %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
