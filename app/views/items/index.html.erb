<div class="dashboard_menu">
	<ul class="nav nav-pills">
	  <li>
      <a data-toggle="modal" data-target="#itemImportForm">
        <span class="glyphicon glyphicon-import"></span> Import Items
      </a> 
    </li>
	</ul>
</div>

<div class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Item</th>
            <th>Category</th>
            <th>Available</th>
            <th>Sold</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr class="<%= item.stock_amount > 0 ? '' : 'danger' %>">
              <td><%= item.sku %></td>
              <td><%= item.name %></td>
              <td><%= item.item_categories.count==0 ? '-' : item.item_categories.pluck(:name) %></td>
              <td><%= item.stock_amount %></td>
              <td><%= item.amount_sold %></td>
              <td><%= number_to_currency(item.price , unit: config.currency)%></td>
              <td><%= link_to 'Show', edit_item_path(item) %> | <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-body">
        <%= will_paginate @items, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>

    <div class="col-sm-12">
      <%= link_to 'New Item', new_item_path, :class => "btn btn-success btn-lg active" %>
    </div>

<div class="modal fade" id="itemImportForm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Import Items (CSV)</h4>
      </div>
      <div class="modal-body">
        <%= form_with url: import_items_path, method: :post, multipart: true do |form| %>
          <div class="form-group">
            <%= form.file_field :csv_file %>
          </div>
          <%= form.submit 'Upload', class: "btn btn-success" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->