<%= form_for(@item) do |f| %>
  <%= render :partial => 'template/form_errors', :object => @item %>

<div class="panel panel-default">
  <div class="panel-body">

   
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Category</label>
          <%= f.collection_check_boxes(:item_category_ids, ItemCategory.all, :id, :name) do |b| %>
            <div class="checkbox">
              <%= b.label { b.check_box + b.text } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>SKU</label>
          <%= f.text_field :sku, :class => "form-control", :placeholder => "Item Sku", :required => true  %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Name of Item</label>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Item Name", :required => true  %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Price</label>
          <%= f.number_field :price, :class => "form-control", :placeholder => "Item Price", :required => true, :min => 0, :step => 0.01 %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Stock Amount</label>
          <%= f.number_field :stock_amount, :class => "form-control", :placeholder => "Amount in Stock", :required => true, :min => 0, :step => 1 %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Cost Price</label>
          <%= f.number_field :cost_price, :class => "form-control", :placeholder => "Cost of Item", :required => true, :min => 0, :step => 0.01 %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Description</label>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Item Description" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Update Item', :class => "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>
